				-About(stock='gmb-about',size=large-toolbar,tip=_"About gmusicbrowser",toggle=1) \
				-Pref(stock='gmb-preferences',size=large-toolbar,tip=_"Settings",click1=OpenPref,click3=OpenPref(library)) \
